<h3 class="text-2xl font-bold text-appleDarkGray mb-4">Categories</h3>
<ul class="flex flex-wrap space-x-4">
  <% Category.all.each do |category| %>
    <li class="text-appleBlue hover:text-appleDarkGray transition-colors duration-200">
      <%= link_to category.category_name, category_path(category), class: "block p-2 rounded-lg hover:bg-appleGray" %>
    </li>
  <% end %>
</ul>
