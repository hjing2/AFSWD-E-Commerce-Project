<h1>Welcome to Ogoki Learning Inc</h1>
<%= form_with url: root_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, placeholder: "Search products" %>
  <%= form.submit "Search" %>
<% end %>
<%= render 'categories' %>
<div class="products">
  <% if @products.present? %>
    <% @products.each do |product| %>
      <div class="product">
        <h2><%= link_to product.product_name, product_path(product) %></h2>
        <p><%= product.description %></p>
        <p><%= product.price %></p>
        <%= image_tag product.image_url if product.image_url.present? %>
      </div>
    <% end %>
  <% else %>
    <p>No products found.</p>
  <% end %>
</div>
<%= paginate @products %>
