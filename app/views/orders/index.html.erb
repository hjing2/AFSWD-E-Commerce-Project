<h1>Past Orders</h1>

<table>
  <thead>
    <tr>
      <th>User Name</th>
      <th>Order Number</th>
      <th>Date</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= current_user.user_name %>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= number_to_currency(order.total_price) %></td>
        <td><%= order.is_paid ? "Paid" : "Pending" %></td>
        <td><%= link_to 'View Order Details', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
