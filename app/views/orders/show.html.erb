<h1>Order Details</h1>

<% if @order %>
  <% if @order.user %>
    <p>
      <strong>Name:</strong>
      <%= @order.user.user_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @order.user.email %>
    </p>
  <% else %>
    <p>No user associated with this order.</p>
  <% end %>

  <p>
    <strong>Address:</strong>
    <%= @order.address_line %>, <%= @order.city %>, <%= @order.province&.name %> <%= @order.postal_code %>, <%= @order.country %>
  </p>

  <p>
    <strong>Payment type:</strong>
    <%= @order.pay_type %>
  </p>

  <h2>Products</h2>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td><%= item.product.product_name %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td><%= number_to_currency(item.order_items_total_price) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<% else %>
  <p>Order not found.</p>
<% end %>