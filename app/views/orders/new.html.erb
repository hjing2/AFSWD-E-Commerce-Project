<h1 class="text-3xl font-bold text-appleDarkGray mb-6">Checkout</h1>

<%= form_with(model: @order, local: true, url: confirm_order_orders_path, class: "space-y-4") do |form| %>
  <div class="field">
    <%= form.label :name, class: "block text-appleDarkGray mb-2" %>
    <%= form.text_field :name, value: current_user.user_name, readonly: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :email, class: "block text-appleDarkGray mb-2" %>
    <%= form.email_field :email, value: current_user.email, readonly: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :address_line, "Address", class: "block text-appleDarkGray mb-2" %>
    <%= form.text_area :address_line, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :city, class: "block text-appleDarkGray mb-2" %>
    <%= form.text_field :city, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :province_id, "Province", class: "block text-appleDarkGray mb-2" %>
    <%= form.collection_select :province_id, Province.all, :id, :name, { prompt: "Select Province" }, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :postal_code, class: "block text-appleDarkGray mb-2" %>
    <%= form.text_field :postal_code, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :country, class: "block text-appleDarkGray mb-2" %>
    <%= form.text_field :country, value: "Canada", readonly: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= form.label :pay_type, class: "block text-appleDarkGray mb-2" %>
    <%= form.select :pay_type, Order::PAYMENT_TYPES, {}, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="actions mt-4">
    <%= form.submit "Confirm Address", class: "px-6 py-2 bg-appleBlue text-white font-semibold rounded-lg hover:bg-appleDarkGray transition-colors duration-200" %>
  </div>
<% end %>
