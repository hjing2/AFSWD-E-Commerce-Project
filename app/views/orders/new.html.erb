<h1>Checkout</h1>

<%= form_with(model: @order, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :pay_type %>
    <%= form.select :pay_type, Order::PAYMENT_TYPES %>
  </div>

  <div class="actions">
    <%= form.submit "Place Order" %>
  </div>
<% end %>
