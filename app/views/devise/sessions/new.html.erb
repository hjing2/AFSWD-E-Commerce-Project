<h2 class="text-3xl font-bold text-appleDarkGray mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-appleDarkGray mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-appleDarkGray mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex items-center">
      <%= f.check_box :remember_me, class: "form-checkbox h-5 w-5 text-appleBlue" %>
      <%= f.label :remember_me, class: "ml-2 text-appleDarkGray" %>
    </div>
  <% end %>

  <div class="actions mt-4">
    <%= f.submit "Log in", class: "px-6 py-2 bg-appleBlue text-white font-semibold rounded-lg hover:bg-appleDarkGray transition-colors duration-200" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
