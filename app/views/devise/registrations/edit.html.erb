<h2 class="text-3xl font-bold text-appleDarkGray mb-6">Edit Profile</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), method: :put, class: "space-y-4", html: { multipart: true }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="field">
    <%= f.label :user_name, class: "block text-appleDarkGray mb-2" %>
    <%= f.text_field :user_name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "block text-appleDarkGray mb-2" %>
    <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-appleDarkGray mb-2" %> <i class="text-sm">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block text-appleDarkGray mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: "block text-appleDarkGray mb-2" %> <i class="text-sm">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :profile_image, class: "block text-appleDarkGray mb-2" %>
    <%= f.file_field :profile_image, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <% if resource.profile_image.attached? %>
    <div class="field">
      <%= image_tag resource.profile_image.variant(resize: "100x100"), class: "w-24 h-24 rounded-full mb-4" %>
    </div>
  <% end %>

  <h3 class="text-2xl font-bold text-appleDarkGray mb-4">Address Details</h3>

  <%= f.fields_for :addresses, resource.current_address do |address_form| %>
    <div class="field">
      <%= address_form.label :address_line, class: "block text-appleDarkGray mb-2" %>
      <%= address_form.text_field :address_line, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    </div>
    <div class="field">
      <%= address_form.label :city, class: "block text-appleDarkGray mb-2" %>
      <%= address_form.text_field :city, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    </div>
    <div class="field">
      <%= address_form.label :province_id, "Province", class: "block text-appleDarkGray mb-2" %>
      <%= address_form.collection_select :province_id, Province.all, :id, :name, { prompt: "Select Province" }, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    </div>
    <div class="field">
      <%= address_form.label :postal_code, class: "block text-appleDarkGray mb-2" %>
      <%= address_form.text_field :postal_code, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    </div>
    <div class="field">
      <%= address_form.label :country, "Country", class: "block text-appleDarkGray mb-2" %>
      <%= address_form.select :country, options_for_select(["Canada"], selected: "Canada"), class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    </div>
  <% end %>

  <div class="actions mt-4">
    <%= f.submit "Update", class: "px-6 py-2 bg-appleBlue text-white font-semibold rounded-lg hover:bg-appleDarkGray transition-colors duration-200" %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
