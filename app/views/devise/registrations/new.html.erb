<h2 class="text-3xl font-bold text-appleDarkGray mb-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }, class: "space-y-4") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :user_name, class: "block text-appleDarkGray mb-2" %>
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user-name", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue"  %>
  </div>

  <div class="field">
    <%= f.label :email, class: "block text-appleDarkGray mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-appleDarkGray mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue mt-2" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "block text-appleDarkGray mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="field">
    <%= f.label :profile_image, "Profile Image", class: "block text-appleDarkGray mb-2" %>
    <%= f.file_field :profile_image, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Sign up", class: "px-6 py-2 bg-appleBlue text-white font-semibold rounded-lg hover:bg-appleDarkGray transition-colors duration-200" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
