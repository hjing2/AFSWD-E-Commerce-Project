<h1 class="text-3xl font-bold text-appleDarkGray mb-4"><%= @product.product_name %></h1>
<p class="text-lg text-gray-700 mb-4"><%= @product.description %></p>
<p class="text-xl font-semibold text-gray-900 mb-6"><%= number_to_currency(@product.price) %></p>

<% if @product.image_url.present? %>
  <%= image_tag @product.image_url, class: "w-300 h-auto object-cover rounded-lg mb-6" %>
<% end %>

<%= form_with url: cart_items_path, method: :post, local: true do %>
  <div class="flex items-center space-x-4">
    <%= hidden_field_tag :product_id, @product.id %>
    <%= number_field_tag :quantity, 1, min: 1, class: "w-16 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    <%= submit_tag "Add to Cart", class: "px-6 py-2 bg-appleBlue text-white font-semibold rounded-lg hover:bg-appleDarkGray transition-colors duration-200" %>
  </div>
<% end %>
