<div class="container mx-auto px-6 py-8">
  <h1 class="text-3xl font-bold text-appleDarkGray mb-6">AI Bot</h1>

  <%= form_with url: ai_bots_path, method: :post, local: true, class: "space-y-4" do |form| %>
    <div class="field">
      <%= form.label :query, "Ask AI Bot:", class: "block text-appleDarkGray mb-2" %>
      <%= form.text_area :query, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-appleBlue" %>
    </div>
    <div class="actions">
      <%= form.submit "Ask", class: "px-6 py-2 bg-appleBlue text-white font-semibold rounded-lg hover:bg-appleDarkGray transition-colors duration-200" %>
    </div>
  <% end %>

  <% if @response.present? %>
    <h2 class="text-2xl font-bold text-appleDarkGray mt-8">Response:</h2>
    <p class="mt-4 p-4 bg-white border border-gray-300 rounded-lg"><%= @response %></p>
  <% end %>
</div>
